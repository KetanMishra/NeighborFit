{
  "compilerOptions": {
    "target": "ES2020",                   // modern JavaScript output
    "module": "commonjs",                 // required for Node.js
    "rootDir": "src",                     // where your .ts source files live
    "outDir": "dist",                     // compiled .js output
    "strict": true,                       // enable strict type checks
    "esModuleInterop": true,              // for better CommonJS compatibility
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                  // faster builds, skips type checking of node_modules
  },
  "include": ["src"]
}